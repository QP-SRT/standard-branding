<div id="header">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 text-center-xs">
        {% if model.logo_url %}
          <img id="merchant-logo" class="" src="{{ model.logo_url }}" alt="{{ model.displayname }}">
        {% else %}
          <h1 id="merchant-name" class="text-center-xs">{{ model.displayname }}</h1>
        {% endif %}
      </div>
    </div>
    {% include "order_info" %}
  </div>
</div>

{% include "content" %}

{% if model.show_cancel? %}
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-xs-12">
      <a class="btn btn-default btn-cancel center-xy" href="/{{ model.session_id }}/cancel-payment" data-confirm="{% t Are you about to abort the payment. Are you sure? %}"><img class="icon icon-ban" src="{{ images.ban.svg }}" alt="Cancel">{% t Cancel Payment %}</a>
    </div>
  </div>
</div>
{% endif %}

<div id="footer">
  <div id="gateway-info">
    <div id="gateway-info-inner">
      <div class="container">
        <div class="row">
          <div class="col-xs-12" style="text-align: center">
            <button class="btn btn-default" data-hide="#gateway-info"><img class="icon" src="{{ images.arrow-down.svg }}" alt="Cancel"></button>
          </div>
        </div>
        <div id="gateway-description" class="row">
          <div class="col-md-6 col-sm-6 col-xs-12">
            <p>QuickPay is your secure, reliable and dynamic payment service provider. Learn more about our services at <a href="https://www.quickpay.net">www.quickpay.net</a>.</p>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <p>QuickPay operates at the highest level of security and is certified by the PCI Security Standards Council.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="bottom-bar">
    <div class="container">
      <div class="row">
        <div class="col-xs-6">
          <img class="clickable" src="{{ images.quickpay_logo_inverse.png }}" data-toggle="#gateway-info" alt="About QuickPay">
        </div>
        <div class="col-xs-6 text-right">
          <span class="center-y text-right">
            <img class="icon clickable" src="{{ images.lock.svg }}" alt="About QuickPay" data-toggle="#gateway-info"> <span class="clickable" data-toggle="#gateway-info">Secure</span>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>
