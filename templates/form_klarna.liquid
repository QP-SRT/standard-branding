<div id="payment_details" class="col-md-8">
  {% include 'form_error' %}
  <form method="post" autocomplete="off" action="process_klarna">
    <dl class="dl-horizontal">
      <dt>{{ lang.form.klarna.nin.number }}:</dt>
      <dd><input type="text" name="nin[number]"></dd>

      <dt>{{ lang.form.klarna.nin.gender }}:</dt>
      <dd>
        <select name="nin[gender]">
          <option value="male">{{ lang.form.gender.male }}</option>
          <option value="female">{{ lang.form.gender.female }}</option>
        </select>
      </dd>

      <dt>{{ lang.form.klarna.nin.country_code }}:</dt>
      <dd>
        <select name="nin[country_code]">
          {% for country_code in model.country_codes %}
            <option value="{{ country_code }}" {% if model.country_code == country_code %}selected{% endif %}>
              {% case country_code %}
              {% when 'DNK' %}
                {{ lang.form.country.denmark }}
              {% when 'SWE' %}
                {{ lang.form.country.sweden }}
              {% when 'NOR' %}
                {{ lang.form.country.norway }}
              {% when 'FIN' %}
                {{ lang.form.country.finland }}
              {% when 'NLD' %}
                {{ lang.form.country.netherlands }}
              {% when 'GER' %}
                {{ lang.form.country.germany }}
              {% when 'AUT' %}
                {{ lang.form.country.austria }}
              {% endcase %}
            </option>
          {% endfor %}
        </select>
      </dd>
    </dl>

    <input type="hidden" name="session_id" value="{{ model.session_id }}" />
    <input type="submit" name="submit" value="{{ lang.form.klarna.submit }}">
  </form>
</div>
