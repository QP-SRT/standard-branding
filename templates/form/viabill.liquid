<div class="container">
  <form action="{{ model.viabill["redirect_url"] }}" method="POST" target="_top" class="autosubmit">
    <input type="hidden" name="protocol"     value="{{ model.viabill["protocol"] }}">
    <input type="hidden" name="apikey"       value="{{ model.viabill["api_key"] }}">
    <input type="hidden" name="transaction"  value="{{ model.viabill["transaction_id"] }}">
    <input type="hidden" name="amount"       value="{{ model.viabill["amount"] }}">
    <input type="hidden" name="currency"     value="{{ model.viabill["currency"] }}">
    <input type="hidden" name="success_url"  value="{{ model.viabill["success_url"] }}">
    <input type="hidden" name="cancel_url"   value="{{ model.viabill["cancel_url"] }}">
    <input type="hidden" name="order_number" value="{{ model.viabill["order_id"] }}">
    <input type="hidden" name="md5check"     value="{{ model.viabill["md5check"] }}">
    <input type="hidden" name="callback_url" value="{{ model.viabill["callback_url"] }}">
    {% for item in model.viabill["variables"] %}
      <input type="hidden" name="{{ item[0] }}" value="{{ item[1] }}">
    {% endfor %}
    {% if model.viabill["mandatory_waiting"] %}
      <input type="hidden" name="mandatory_waiting" value="true">
    {% endif %}
    <div class="row">
      <div class="col-sm-4 col-sm-push-8 col-xs-6 col-xs-push-3">
          <img src="/assets/v2/images/brands/viabill.svg" alt="ViaBill" title="ViaBill" style="width:100%">
      </div>
      <div class="col-sm-8 col-sm-pull-4 col-xs-12">
        <p>{% t When you click the button below, the ViaBill payment window will open. %}</p>
        <p>{% t When finished, you will be redirected back to your receipt. %}</p>
        <button type="submit" class="btn btn-info btn">{% t Proceed to payment %}</button>
      </div>
    </div>
  </form>
</div>
