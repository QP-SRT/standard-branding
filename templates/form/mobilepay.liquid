<div class="container">
  {% include 'form/error' %}
  <form action="{{ model.redirect_url }}" method="POST" target="_top" class="autosubmit">
    <input type="hidden" name="SessionToken" value="{{ model.session_token }}" />
    {% if true %}
      <input type="hidden" name="PhoneNumber" value="{{ model.phone_number }}" />
    {% endif %}
    <div class="row">
      <div class="col-sm-4 col-sm-push-8 col-xs-6 col-xs-push-3">
          <img src="/assets/v2/images/brands/mobilepay.svg" alt="MobilePay" title="MobilePay" style="width:100%">
      </div>
      <div class="col-sm-8 col-sm-pull-4 col-xs-12">
        {{ lang.form.mobilepay.help | newline_to_p }}
        <button type="submit" class="btn btn-info btn">{{ lang.form.mobilepay.submit }}</button>
      </div>
    </div>
  </form>
</div>
