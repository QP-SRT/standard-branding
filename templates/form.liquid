{% include "form/error" %}
{% include model.form_template %}

{% if model.alternative_payment_methods %}
  <div id="alternative-payment-methods">
    <div class="container">
      <div class="row">
        {% if model.allow_undo_payment_method %}
          <div class="col-sm-4 col-xs-6 payment-method">
            <a href="{{ model.session_id }}/payment-method-undo/" class="btn btn-default">
              <img src="/assets/v2/images/cards.svg" alt="{{ lang.form.cards }}" title="{{ lang.form.cards }}"/>
            </a>
          </div>
        {% endif %}

        {% for method in model.alternative_payment_methods %}
          <div class="col-sm-4 col-xs-6 payment-method">
            <a href="{{ model.session_id }}/payment-method/{{ method.name }}" class="btn btn-default">
              <img src="{{ method.image_path }}" alt="{{ method.nice_name }}" title="{{ method.nice_name }}"/>
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}
